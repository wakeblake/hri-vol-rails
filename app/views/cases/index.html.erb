<h1>Report Your Hours</h1>
<div class="divTable paleBlueRows" id="show_table">

  <div class="divTableHeading">
    <div class="divTableRow">
      <div class="divTableHead">Client</div>
      <div class="divTableHead">Organization</div>
      <div class="divTableHead">Attorney</div>
      <div class="divTableHead">Hours spent on case</div>
      <div class="divTableHead">Billing rate (hr)</div>
    </div>
  </div>

  <div class="divTableBody">
    <% @cases.each do |_case| %> 
      <%= content_tag :div, class: "divTableRow", id: dom_id(_case) do %>
        <div class="divTableCell"><%= _case.client.clientname %></div>
        <div class="divTableCell"><%= _case.attorney.firm %></div>
        <div class="divTableCell"><%= _case.attorney.name %></div>
        <div class="divTableCell"><%= _case.report.hours_volunteered %></div>
        <div class="divTableCell"><%= _case.attorney.bill_rate_hr %></div>
        <div class="divTableCell" data-controller="hello">
          <%= link_to "Edit", "#", "data-action": "hello#onEdit", id: dom_id(_case) %>
          <!-- links to show, edit, destroy -->
        </div>
      <% end %>
      <%= render "inline_form",
        case: _case,
        id: _case.id,
        cn: _case.client.clientname, 
        f: _case.attorney.firm, 
        an: _case.attorney.name, 
        hv: _case.report.hours_volunteered, 
        br: _case.attorney.bill_rate_hr %>
    <% end %>
  </div>
</div>

